<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="Styles/logged-out.css">
<div class="page">
   <div class="menubar">
      <img class="menu-logo" src="https://raw.githubusercontent.com/editorrust/vegetable-dash/6350bdf2e9a47f1dc38f5f7b0077850877563f8d/assets/Images/Global%20Assets/logo.svg" alt="Vegetable Dash">
      <div class="menu-username">
         <p>Menu</p>
      </div>
      <p class="menu-option signin" onclick="document.querySelector('.signin-modal').style.display = 'flex'">Sign in!</p>
      <p class="menu-option signup" onclick="document.querySelector('.signup-modal').style.display = 'flex'">Create an account!</p>
      <div class="menu-username">
         <p>Social Login</p>
      </div>
      <p class="menu-option github"><a href="https://github.com/login/oauth/authorize?client_id=<%= client_id %>"><span class="fa fa-github"></span> Github</a></p>
   </div>
   <%- include("gameNews"); %>
</div>
<div class="noticeboard">
   <div class="page-notice warning">
      <span class="remove" onclick="this.parentNode.remove()">x</span>
      <p class="heading">You're not signed in</p>
      <p class="text">If you make a Vegetable Dash account, you can save your progress and connect with friends. If you don't want an account, you can try the <a href="https://editorrust.github.io/vegetable-dash/">quickplay version</a>.</p>
   </div>
</div>